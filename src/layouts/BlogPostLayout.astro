---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  frontmatter: CollectionEntry<'blog'>['data'];
}

const { frontmatter } = Astro.props;
const formattedDate = frontmatter.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${frontmatter.title} | Andrei Nicolae`} description={frontmatter.description}>
  <article>
    <h1>{frontmatter.title}</h1>
    <p class="post-meta">
      <time datetime={frontmatter.date.toISOString()}>{formattedDate}</time>
    </p>
    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>
